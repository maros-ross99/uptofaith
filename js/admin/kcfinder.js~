function openKCFinder(base_url, div, target, dir)
{
   window.KCFinder =
   {
      callBack: function(url)
      {
			window.KCFinder = null;
         set_image(base_url, url, div, target);
      }
   };

   window.open
	(
   	base_url + "kcfinder/browse.php?lang=cs&type=images&dir=" + dir,
		"'kcfinder_image", "status=0, toolbar=0, location=0, menubar=0, " +
      "directories=0, resizable=1, scrollbars=0, width=800, height=600"
   );
}

function clear_image(div, target)
{
	var target = document.form[target];
	target.value = "";
	
	div.innerHTML = '<div style="margin:5px">Kliknite pre výber obrázku</div>';
	
}

function set_image(base_url, url, div, target)
{
	if (url == "")
		return;
		
   // save url without base url
	var target = document.form[target];
	target.value = url;

   //url = base_url + url;
	
   div.innerHTML = '<div style="margin:5px">Načítanie...</div>';
   var img = new Image();
   img.src = url;
   img.onload = function()
   {
       div.innerHTML = '<img id="img" src="' + url + '" />';

       var img = document.getElementById('img');
		 
       var o_w = img.offsetWidth;
       var o_h = img.offsetHeight;
       var f_w = div.offsetWidth;
       var f_h = div.offsetHeight;		                
       
       if ((o_w > f_w) || (o_h > f_h)) {
           if ((f_w / f_h) > (o_w / o_h))
               f_w = parseInt((o_w * f_h) / o_h);
           else if ((f_w / f_h) < (o_w / o_h))
               f_h = parseInt((o_h * f_w) / o_w);
           img.style.width = f_w + "px";
           img.style.height = f_h + "px";
       }
       else
       {
           f_w = o_w;
           f_h = o_h;
       }
       img.style.marginLeft = parseInt((div.offsetWidth - f_w) / 2) + 'px';
       img.style.marginTop = parseInt((div.offsetHeight - f_h) / 2) + 'px';
       img.style.visibility = "visible";
   }
}
