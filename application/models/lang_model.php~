	var $lang = NULL;

	function __construct()
   {
		// Call the Model constructor
		parent::__construct();
		
		$site_config = $this->config->item('site');
		$this->lang = $site_config['lang'];
		
		$this->form_validation->set_message("required", $this->text[$this->lang]['form-required']);
		$this->form_validation->set_message("valid_email", $this->text[$this->lang]['form-valid-email']);
		$this->form_validation->set_message("valid_emails", $this->text[$this->lang]['form-valid-emails']);
		$this->form_validation->set_message("integer", $this->text[$this->lang]['form-integer']);
	}
	
	function get_text_array()
	{
		return $this->text[$this->lang];
	}
	
	function text($index)
	{
		return $this->text[$this->lang][$index];	
	}	
}
